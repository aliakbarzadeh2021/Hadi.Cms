@model List<Hadi.Cms.Model.Mappings.Interfaces.IPartnerDto>


@foreach (var obj in Model.Select((item, index) => new { item, index }).ToList())
{
    if (obj.index == 0 || obj.index % 3 == 0)
    {
        @Html.Raw("<div class='mt-2'>");
    }

    if (!string.IsNullOrEmpty(obj.item.Link))
    {
        <a href="@obj.item.Link">
            <img class="mr-2" src="@obj.item.AttachmentImageSource" alt="@obj.item.ToolTip">
        </a>
    }

    else
    {
        <img class="mr-2" src="@obj.item.AttachmentImageSource" alt="@obj.item.ToolTip">
    }


    if ((obj.index + 1) % 3 == 0 || obj.index + 1 == Model.Count())
    {
        @Html.Raw("</div>");
    }
}
