@model INewsDto

@{
	ViewBag.Title = Strings.Global_NewsContent;
	Layout = "~/Views/Shared/_InnerPageLayout.cshtml";
}

<style>
	.summaryText {
		background-color: #f5f5f5;
		padding: 15px;
		margin: 0px 0 15px 0;
		border-bottom: 1px solid #c2c2c2;
	}

	.article-title {
		margin-bottom: 60px !important;
	}

	.img-news {
		padding: 4px;
		margin-bottom: 15px;
	}
</style>

