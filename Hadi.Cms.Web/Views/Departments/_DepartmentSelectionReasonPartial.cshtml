@model List<Hadi.Cms.Model.Mappings.Interfaces.IDepartmentSelectionReasonDto>

@if (Model.Count > 0)
{
    <section class="team-information-container">
        <div class="line-custom"></div>
        <div class="team-inforamtion">
            <div class="info-header mb-5">
                <div class="info-title">
                    <span>
                        چــــرا
                    </span>
                    <span class="green-color" style="color: @ViewBag.DepartmentColor">
                        تیـــــم ما
                    </span>
                    <span>
                        ؟
                    </span>
                </div>
                <div class="line-green-custom" style="background-color:@ViewBag.DepartmentColor">

                </div>
            </div>
            <div class="info-main-container">
                @foreach (var item in Model)
                {
                    <div class="info-box">
                        <img src="@item.ImageSource" alt="">
                        <div class="font-weight-bold mt-3 mb-2">
                            @item.Title
                        </div>
                        <div class="info-description">
                            @Html.Raw(@item.Description)
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="h-1">
            <div class="line-custom left-side"></div>
        </div>
    </section>
}