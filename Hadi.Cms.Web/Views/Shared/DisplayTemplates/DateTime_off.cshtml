@using System.Globalization;
@using Hadi.Cms.Web.Utilities

@model System.DateTime?

@if(!Model.HasValue)
{
    @("--")
}
else if (SessionData.Current.HasRightToLeftUI)
{
    PersianCalendar persianCalendar = new PersianCalendar();
    @(String.Format("{0:0000}/{1:00}/{2:00}", persianCalendar.GetYear(Model.Value), persianCalendar.GetMonth(Model.Value), persianCalendar.GetDayOfMonth(Model.Value)))
}
else
{
    @(String.Format("{0:0000}/{1:00}/{2:00}", Model.Value.Year, Model.Value.Month, Model.Value.Day))
}